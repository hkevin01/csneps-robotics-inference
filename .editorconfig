root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyx}]
indent_size = 4
max_line_length = 88

[*.{clj,cljs,cljc,edn}]
indent_size = 2

[*.{c,cc,cpp,cxx,h,hpp,hxx}]
indent_size = 2
max_line_length = 100

[*.{java}]
indent_size = 4
max_line_length = 120

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{proto}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,bash}]
indent_size = 2

[*.{xml}]
indent_size = 2
